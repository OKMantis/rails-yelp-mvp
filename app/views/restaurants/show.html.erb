<div class="container" style="margin-top: 2rem; padding: 5rem;">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"><%= @restaurant.category.capitalize %></h6>
      <p class="card-text">
        <i class="fa-regular fa-address-book"> </i> <%= @restaurant.address %><br>
        <i class="fa-solid fa-phone"></i> <%= @restaurant.phone_number %>
      </p>
      <ul class="list-group list-group-flush" style="padding-top: 1rem; padding-bottom: 1rem;">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item">
            <% review.rating.times do %>
              <i class="fa fa-star text-warning"></i>
            <% end %>
            <br> 
            <%= review.content %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
      <%= link_to "See restaurants", restaurants_path, class: "btn btn-success" %>
    </div>
    <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-bottom" alt="...">
  </div>
</div>